// CR7.jsx
import Club from "./Club";
export default function CR7() {
  //const clubs = ["Sporting Lisbon", "Manchester United", "Real Madrid", "Juventus", "Al Nassr" , "Portugal National Team"];
  const clubs = [
    { name: "Sporting Lisbon", join: "2002-2003", emoji: "‚öΩÔ∏è" },
    { name: "Manchester United", join: "2003-2009", emoji: "‚öΩÔ∏è" },
    { name: "Real Madrid", join: "2009-2018", emoji: "‚öΩÔ∏è" },
    { name: "Juventus", join: "2018-2021", emoji: "‚öΩÔ∏è" },
    { name: "Manchester United", join: "2021-2022", emoji: "‚öΩÔ∏è" },
    { name: "Al Nassr", join: "2023-present", emoji: "‚öΩÔ∏è" },
    { name: "Portugal National Team", join: "2003-present", emoji: "üáµüáπ" },
  ];
  return (
    <div>
      <h1>
        {clubs.map((club) => (
          <Club
            key={club.name + club.join}
            name={club.name}
            join={club.join}
            emoji={club.emoji}
          />
        ))}
      </h1>
    </div>
  );
}

// Club.jsx
export default function Club({ name, join, emoji }) {
  const [start, end] = join.split("-");

  const startYear = parseInt(start);
  const endYear = end === "present" ? new Date().getFullYear() : parseInt(end);
  const duration = endYear - startYear;

  if (duration <= 5) return null;
  return (
    <li>
      {name} {emoji} : he joins {join} ({duration} years)
    </li>
  );
}
